<form action="/process" method="post">
  <input type="hidden" name="action" value="edit" />
  <input type="hidden" name="id" value="<%= data._id %>" />
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Question</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="inputQuestion" name="question"><%= data.question %></textarea>
    </div>
  </div>
  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Options</legend>
      <div class="col-sm-10">
        <div class="row">
          <div class="col-sm-6">
            <textarea class="form-control" id="inputOptionA" name="option_a"><%= data.options[0].label %></textarea>
          </div>
          <div class="col-sm-4">
            <div class="form-check">
              <input type="radio" class="form-check-input" id="inputOptionACorrect" value="A" name="correct_option" <% if(data.correct_ans == 'A'){ %> checked="checked" <% } %>>
              <label class="form-check-label" for="inputOptionACorrect">Is Correct?</label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <textarea class="form-control" id="inputOptionB" name="option_b"><%= data.options[1].label %></textarea>
          </div>
          <div class="col-sm-4">
            <div class="form-check">
              <input type="radio" class="form-check-input" id="inputOptionBCorrect" value="B" name="correct_option" <% if(data.correct_ans == 'B'){ %> checked="checked" <% } %>>
              <label class="form-check-label" for="inputOptionBCorrect">Is Correct?</label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <textarea class="form-control" id="inputOptionC" name="option_c"><%= data.options[2].label %></textarea>
          </div>
          <div class="col-sm-4">
            <div class="form-check">
              <input type="radio" class="form-check-input" id="inputOptionCCorrect" value="C" name="correct_option" <% if(data.correct_ans == 'C'){ %> checked="checked" <% } %>>
              <label class="form-check-label" for="inputOptionCCorrect">Is Correct?</label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <textarea class="form-control" id="inputOptionD" name="option_d"><%= data.options[3].label %></textarea>
          </div>
          <div class="col-sm-4">
            <div class="form-check">
              <input type="radio" class="form-check-input" id="inputOptionDCorrect" value="D" name="correct_option" <% if(data.correct_ans == 'D'){ %> checked="checked" <% } %>>
              <label class="form-check-label" for="inputOptionDCorrect">Is Correct?</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
  <div class="form-group row">
    <label for="inputPoint" class="col-sm-2 col-form-label">Point</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" min="1" max="20" step="1" id="inputPoint" name="point" value="<%= data.point %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputTimeLimit" class="col-sm-2 col-form-label">Time</label>
    <div class="col-sm-6">
      <input type="number" class="form-control" min="15" max="180" step="1" id="inputTimeLimit" name="time_limit" value="<%= data.time_limit %>">
    </div>
    <div class="col-sm-4">
      <small>in Seconds</small>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>